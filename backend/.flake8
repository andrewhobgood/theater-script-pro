[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    migrations,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov,
    dist,
    build,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    */settings/*.py:F401,F403,F405
    */tests/*.py:F401,F403,F811